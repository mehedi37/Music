@model IEnumerable<Musics>

@{
    ViewData["Title"] = "Music | List";
}


@{   
    <h1>Musics</h1> 
    <div class="album py-5 bg-light">
        <div class="container">
            @if (Model == null || !Model.Any()) 
            {
                <div class="alert alert-warning" role="alert">
                    No music found.
                </div>
            } else {
                <div class="row">
                @foreach (var i in Model)
                {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="@i.Cover" alt="Card image cap">
                                <div class="card-body">
                                    <small class="card-text font-monospace ">@i.Genre</small>
                                    <h4 class="card-text">@i.Title</h4>
                                    <i class="card-text text-muted ">Artist: @i.Artist?.Name</i>
                                    <p class="card-text text-muted">Album: @i.Album?.Title</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <!--<div class="btn-group">
                                           <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        </div> -->
                                        <small class="text-muted">@i.ReleaseDate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
                </div>
            }
        </div>
    </div>
}

